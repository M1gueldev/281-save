<div id="<%= dom_id voluntario %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Persona:</strong>
    <%= voluntario.persona_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this voluntario", voluntario, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this voluntario", edit_voluntario_path(voluntario), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
