<div id="<%= dom_id persona %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= persona.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Identification:</strong>
    <%= persona.identification %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= persona.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= persona.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= persona.address %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this persona", persona, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this persona", edit_persona_path(persona), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
