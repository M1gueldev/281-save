<div id="<%= dom_id alimento %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= alimento.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= alimento.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= alimento.quantity %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this alimento", alimento, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this alimento", edit_alimento_path(alimento), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
