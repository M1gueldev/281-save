<div id="<%= dom_id responsable %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= responsable.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Identification:</strong>
    <%= responsable.identification %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= responsable.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= responsable.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= responsable.address %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this responsable", responsable, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this responsable", edit_responsable_path(responsable), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
