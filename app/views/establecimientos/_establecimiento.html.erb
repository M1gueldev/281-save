<div id="<%= dom_id establecimiento %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= establecimiento.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= establecimiento.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= establecimiento.location %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this establecimiento", establecimiento, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this establecimiento", edit_establecimiento_path(establecimiento), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
